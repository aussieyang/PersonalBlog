<div class="show-container">

  <div class="row" id="contributors">
    <% @users.each do |user| %>
      <div class="col-md-6" style="overflow:scroll; height:500px;">
        <h3><a href="/users/<%= user['id'] %>"><%=user.name%></a></h3>
        <p style="text-align: center;"><a target = "_blank" href="<%=user.git%>">Find me</a></p>
        <img src="<%=user.portrait%>" alt="">
        <p><%=user.about%></p>
      </div>
    <% end %>
  </div>

</div>
