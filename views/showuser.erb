<div class="show-container">

  <div class="row">

    <div class="col-md-12">

      <div class="head">
        <h3><%= @user.name %></h3>
        <p><a href="<%= @user.git %>">Find me</a></p>
      </div>

      <div class="content">
        <div class="image-container">
          <img src="<%= @user.portrait %>" alt="" class=".img-responsive" id="profile-img">
        </div>
        <p><%= @user.about %></p>
      </div>

      <div class = "footer">
        <% if logged_in? && current_user.email == "yang.j.li91@gmail.com" || logged_in? && current_user.id == @user.id %>
          <form action="/users/<%= @user.id %>/edit">
            <div class="col-sm-6">
              <button id = "edit-user" class="btn btn-lg btn-primary btn-block" type="submit">Edit</button>
            </div>
          </form>

          <form action="/users/<%= @user.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <div class="col-sm-6">
              <button id = "delete-user" class="btn btn-lg btn-primary btn-block" type="submit">Delete</button>
            </div>
          </form>
        <% end %>
      </div>

    </div>

  </div>

</div>
